<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="komorebi\**" />
    <EmbeddedResource Remove="komorebi\**" />
    <None Remove="komorebi\**" />
    <Page Remove="komorebi\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="vendor\CZGL.SystemInfo\CZGL.SystemInfo.dll" />
    <None Remove="vendor\komorebi\komorebi.exe" />
    <None Remove="vendor\komorebi\komorebic.exe" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="vendor\CZGL.SystemInfo\CZGL.SystemInfo.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="vendor\komorebi\komorebi.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="vendor\komorebi\komorebic.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.77" />
	  <!--<PackageReference Include="Panuon.WPF.UI" Version="1.1.16.5">-->
		  
	  <!--</PackageReference>-->
  </ItemGroup>

  <ItemGroup>
	  <ProjectReference Include="..\..\MaterialDesign3\MaterialDesign3.csproj" />
	  <ProjectReference Include="..\..\PluginSDK\PluginSDK.csproj">
		  <Private>false</Private>
		  <ExcludeAssets>runtime</ExcludeAssets>
	  </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CZGL.SystemInfo">
      <HintPath>vendor\CZGL.SystemInfo\CZGL.SystemInfo.dll</HintPath>
    </Reference>
  </ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<!--<Exec Command="xcopy &quot;$(TargetDir)&quot; &quot;$(SolutionDir)MainApp\bin\Release\net6.0-windows\Plugins\Default&quot; /y/e" />-->
		<Exec IgnoreExitCode="true" Command="mkdir &quot;$(SolutionDir)build\Release\net6.0-windows\Plugins\$(ProjectName)&quot;" />
		<Exec IgnoreExitCode="true" Command="mkdir &quot;$(SolutionDir)build\Debug\net6.0-windows\Plugins\$(ProjectName)&quot;" />




		<Exec Condition=" '$(Configuration)' == 'Release' " Command="xcopy &quot;$(TargetDir)&quot; &quot;$(SolutionDir)build\Release\net6.0-windows\Plugins\$(ProjectName)&quot; /y/e" />
		<Exec Condition=" '$(Configuration)' == 'Debug' " Command="xcopy &quot;$(TargetDir)&quot; &quot;$(SolutionDir)build\Debug\net6.0-windows\Plugins\$(ProjectName)&quot; /y/e" />

	</Target>

</Project>
