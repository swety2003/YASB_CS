<UserControl x:Class="TestPlugin.View.DigitalClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPlugin.View"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:TestPlugin.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:DigitalClockVM}"
             >
    <Border>
        <TextBlock FontWeight="Bold" FontSize="18" Text="{Binding NowTime, StringFormat={}{0:HH:mm:ss}, ConverterCulture=Zh-CN, FallbackValue=00:00:00}" VerticalAlignment="Center"/>
    </Border>
</UserControl>
